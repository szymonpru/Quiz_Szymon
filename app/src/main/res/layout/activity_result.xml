<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/my_background"
    tools:context="com.example.szymon_laptop.quiz_szymon.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/box_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results"
            android:paddingTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/mainSecond"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results comment will be here"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/mainSecond"
            android:textSize="20sp"
            android:id="@+id/tvFirstResultComment"/>
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:clickable="false"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second Results comment will be here"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/mainSecond"
            android:textSize="20sp"
            android:id="@+id/tvSecondResultComment"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRY AGAIN"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:background="@drawable/button_click"
            style="@style/startButton"
            android:layout_gravity="center"
            android:id="@+id/bTryAgain"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANSWERS"
            android:gravity="center"
            android:background="@drawable/button_click"
            style="@style/startButton"
            android:layout_gravity="center"
            android:id="@+id/bAnswers"
            />

    </LinearLayout>


</LinearLayout>
